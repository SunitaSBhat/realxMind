<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/cs') %>
   <link rel="stylesheet" href="../avat/idBlog.css">
   <script src="https://kit.fontawesome.com/07cd577cce.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('./partials/nav') %>
    <div>
        <div class="blogContainer">
        <h1><%= Blog.title %></h1>
        <img src="<%=Blog.coverImageUrl%>" width="500px">
        <p><%=Blog.body %></p>
        <p><%=Blog.username%></p>
    </div>
    <h4 class="blogs">Comments <%= comment.length %></h4>
    <div class="mt-4">
        <% if (locals.user) { %>
            <form method="Post" action='/user/<%=Blog._id%>' class="blogs">
  
                <input type="text" name="contents" placeholder="Enter the comment here&nbsp">
                <button type="submit">Post</button>
            </form> 
            </div>
        <% } %>
        <div class="mt-4">
            <% comment.forEach(Comment => { %>
                <div class="g">
              <p  class="comment"><%=Comment.createdBy.fullname%></p>
            <pre  class="comment"><%= Comment.contents %></pre>
            <div class="react">
                <i class="fa-regular fa-heart"></i>
                <p>Reply</p>
            </div>
        </div>
        </div>
            <% }) %>
        </div>
    
</body>
<%- include('./partials/script') %>
</html>